{% extends 'base.html.twig' %}

{% block title %}Eventcalendar{% endblock %}

{% block body %}
    <h1>Eventcalendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eventcalendar.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ eventcalendar.title }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ eventcalendar.start ? eventcalendar.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ eventcalendar.end ? eventcalendar.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ eventcalendar.description }}</td>
            </tr>
            <tr>
                <th>BackgroundColor</th>
                <td>{{ eventcalendar.backgroundColor }}</td>
            </tr>
            <tr>
                <th>BorderColor</th>
                <td>{{ eventcalendar.borderColor }}</td>
            </tr>
            <tr>
                <th>TextColor</th>
                <td>{{ eventcalendar.textColor }}</td>
            </tr>
            <tr>
                <th>AllDay</th>
                <td>{{ eventcalendar.allDay ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_eventcalendar_index') }}">back to list</a>

    <a href="{{ path('app_eventcalendar_edit', {'id': eventcalendar.id}) }}">edit</a>

    {{ include('eventcalendar/_delete_form.html.twig') }}
{% endblock %}
